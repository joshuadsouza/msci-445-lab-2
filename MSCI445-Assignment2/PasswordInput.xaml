<Window x:Class="MSCI445_Assignment2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSCI445_Assignment2"
        mc:Ignorable="d"
        Title="Please enter your password" Height="200.9" Width="527.015">
	<Grid Background="#FFE4E4E4" Margin="0,0,3.667,1.333">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="343*"/>
			<ColumnDefinition Width="40*"/>
			<ColumnDefinition Width="134*"/>
		</Grid.ColumnDefinitions>
		<Label Content="Please enter your password:" HorizontalAlignment="Left" Margin="56,25,0,0" VerticalAlignment="Top" FontSize="16"/>
		<PasswordBox x:Name="PasswordField" HorizontalAlignment="Left" Margin="56,61,0,80" VerticalAlignment="Center" Grid.ColumnSpan="3" Width="411" Height="29"/>
		<Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="56,115,0,0" VerticalAlignment="Top" Width="124" Height="25" Click="SubmitButton_Click"/>
		<Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="0.333,115,0,0" VerticalAlignment="Top" Width="124" Height="25" Grid.ColumnSpan="2" Grid.Column="1" Click="CancelButton_Click"/>
	</Grid>
</Window>
